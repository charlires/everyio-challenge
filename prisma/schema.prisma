generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  MEMBER
  ADMIN
}

enum TaskStatus {
  TODO
  INPROGRESS
  DONE
  ARCHIVED
}

model Task {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  createdAt   DateTime   @default(now())
  archivedAt  DateTime?
  status      TaskStatus
  columnId    String?    @db.ObjectId
  column      Column?    @relation(fields: [columnId], references: [id])
  owner       String?    @db.ObjectId
  user        User?      @relation(fields: [owner], references: [id])
}

model Column {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  tasks     Task[] 
  createdAt DateTime @default(now())
}

model User {
  id    String   @id @default(auto()) @map("_id") @db.ObjectId
  email String   @unique
  role  UserRole
  tasks Task[] 
}
